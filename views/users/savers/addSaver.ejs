<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script
      src="https://kit.fontawesome.com/42a182743f.js"
      crossorigin="anonymous"
    ></script>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/form.css" />
    <title>Add Saver</title>
  </head>
  <body>
    <!-- nav -->
    <%-include('../partials/navbar.ejs') %>
    <div class="form-container">
      <!-- icon -->
      <h1>
        Add Saver
        <!-- add icon -->
        <i class="fas fa-plus"></i>
      </h1>
      <%if(error){%>
      <small class="error">
        <i class="fas fa-exclamation-circle"></i>
        <%=error%>
      </small>
      <%}%>
      <form action="/api/v1/savers" method="POST">
        <!-- User ID -->
        <div class="input-wrapper">
          <label for="userId">User ID</label>
          <input type="text" name="userId" id="userId" />
          <!-- err -->
        </div>

        <!-- Post ID -->
        <div class="input-wrapper">
          <label for="postId">Post ID</label>
          <input type="text" name="postId" id="postId" />
          <!-- err -->
        </div>

        <!-- Post Title -->
        <div class="input-wrapper">
          <label for="title">Post Title</label>
          <input type="text" name="title" id="title" />
          <!-- err -->
        </div>

        <!-- Post Link -->
        <div class="input-wrapper">
          <label for="link">Post Link</label>
          <input type="text" name="link" id="link" />
          <!-- err -->
        </div>

        <button type="submit">Add to Saver</button>
      </form>
    </div>
    <!-- footer -->
    <%-include('../partials/footer.ejs') %>
  </body>
</html>
